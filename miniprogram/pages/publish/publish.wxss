/* miniprogram/pages/publish/publish.wxss */

.content {
  height: 100%;
  width: 100%;
}

.text-content {
  padding: 10rpx 10rpx 10rpx 10rpx;
}

textarea {
  width: 100%;
  height: 450rpx;
  background-color: #f3efef;
}

.input-content{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 336rpx;
  /* align-items: center; */
  line-height: 26rpx;
  border-radius: 5rpx;
  background-color: #f3efef;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.image-group {
  display: flex;
  white-space: nowrap;
  margin-top: 30px;
}

.image-group view{
  display: inline-block;
  flex-direction: row;
  width: 375rpx;
  height: 375rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  background-color: #cfcccc;
}

.image-group view image{
  width: 100%;
  height: 100%;
  align-items: center;
}

.image-group view icon{
  display: inline-block;
  vertical-align: top;
  position: absolute
}

.btn-func {
  display: flex;
  flex-direction: row;
  width: 100%;
  position: absolute;
  bottom: 0;
  margin: 0 auto;
  align-items: center;
  /* background: pink; */
}


.btn {
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #5cc97f;
  color: #fff;
  border-radius: 50rpx;
}

.holder {
  font-size: 26rpx;
}

.picimg {
  width:60rpx;
  height:45rpx;
  margin-left:65rpx; 
  margin-top: 12rpx;
}

.picimgview {
  /* background: blue; */
  width: 208rpx;
}


